{% extends 'base.html.twig' %}

{% block title %}Hello FoodController!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success">
            <strong>Well done!</strong> {{ message }}.
        </div>
    {% endfor %}
    <div class="container">
        <div class="row">
            <div>
                <a href="#" class="btn btn-secondary mb-3 mt-3">Create New</a>
            </div>
            {% for index in food %}
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="{{index.product.image}}" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">{{ index.product.description }}</p>
                            <small class="text-muted"><b>price: </b>{{ index.price }} $</small><br>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="#" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a href="{{ path('app_drink_edit',{id: index.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a href="{{ path('app_food_delete',{id: index.id}) }}" onclick="confirm('Are you sure ?')" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                                <small class="text-muted">{{ index.product.createdAt | ago }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
